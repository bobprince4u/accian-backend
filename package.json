{
  "name": "accian-backend",
  "version": "1.0.0",
  "description": "ACCIAN Limited - Backend API",
  "main": "dist/server.js",
  "scripts": {
    "start": "npm run migrate && node dist/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' server.ts",
    "test": "npm run migrate &&echo \"Error: no test specified\" && exit 1",
    "build": "tsc && cp -r src/templates dist/templates",
    "migrate": "ts-node scripts/runMigrations.ts",
    "migrate:down": "ts-node -e \"require('./src/migrations/001_add_security_fields').down().then(() => process.exit(0)).catch((e) => { console.error(e); process.exit(1); })\""
  },
  "keywords": [
    "api",
    "backend",
    "accian"
  ],
  "author": "ACCIAN Limited",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-rate-limit": "^5.1.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.1",
    "@types/node-fetch": "^2.6.13",
    "@types/pg": "^8.15.6",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
